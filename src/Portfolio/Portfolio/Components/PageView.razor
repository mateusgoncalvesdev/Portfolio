@typeparam TContent
@inject NavigationManager NavigationManager

<PageTitle>@Title</PageTitle>

<RadzenRow Gap="5">
    <RadzenColumn Size="12">
        <RadzenText Text="@Title" TextStyle="Radzen.Blazor.TextStyle.DisplayH3"></RadzenText>
        <DynamicComponent Type="@typeof(TContent)" />
    </RadzenColumn>
    <RadzenColumn Size="12">
        <RadzenButton Click="@(() => NavigationManager.NavigateTo(BackUrl))" Text="Voltar" Icon="arrow_back" ButtonStyle="ButtonStyle.Primary" />
    </RadzenColumn>
</RadzenRow>

@code {
    [Parameter] public string Title { get; set; } = default!;
    [Parameter] public string BackUrl { get; set; } = "/Portfolio/";
}