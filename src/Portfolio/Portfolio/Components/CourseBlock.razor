<RadzenCard>
    <RadzenStack>
        <RadzenStack Orientation="Orientation.Horizontal">
            <RadzenText TextStyle="TextStyle.Subtitle1">@Course.Title</RadzenText>
            @if (Course.Hours != null)
            {
                <RadzenText TextStyle="TextStyle.Body1">@($"({Course.Hours}h)")</RadzenText>
            }
        </RadzenStack>
        <RadzenText TextStyle="TextStyle.Subtitle2">@Course.Provider</RadzenText>
        @if (Course.CompletedAt.HasValue)
        {
            <RadzenText TextStyle="TextStyle.Body1">Verificação emitida em: @Course.CompletedAt.Value.ToString("MMM yyyy")</RadzenText>
        }
        else if (Course.Year.HasValue)
        {
            <RadzenText TextStyle="TextStyle.Body1">Verificação emitida em: @Course.Year</RadzenText>
        }
    </RadzenStack>
</RadzenCard>

@code {
    [Parameter]
    public Course Course { get; set; } = null!;
}
